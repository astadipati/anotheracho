<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DataActivity">

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:text="Islamic Court Mobile Partner"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:paddingTop="4dp"
            android:layout_marginLeft="10dp"
            android:textStyle="italic"
            android:text="Jl. Tegal Boro Indah Gg 02 Tuban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:paddingTop="7dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp">

        <ImageView

            android:layout_width="50dp"
            android:src="@drawable/dataumum"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/tvdataumum"
            android:paddingTop="10dp"
            android:layout_marginLeft="6dp"
            android:text="Data Umum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingTop="7dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp">

        <ImageView

            android:layout_width="50dp"
            android:src="@drawable/jadwalsidang"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/tvjadwalsidang"
            android:paddingTop="10dp"
            android:layout_marginLeft="6dp"
            android:text="Jadwal Sidang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingTop="7dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp">

        <ImageView

            android:layout_width="50dp"
            android:src="@drawable/biayaperkara"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/tvbiayaperkara"
            android:paddingTop="10dp"
            android:layout_marginLeft="6dp"
            android:text="Biaya Perkara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingTop="7dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp">

        <ImageView

            android:layout_width="50dp"
            android:src="@drawable/riwayat"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/tvriwayat"
            android:paddingTop="10dp"
            android:layout_marginLeft="6dp"
            android:text="Riwayat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingTop="7dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp">

        <ImageView

            android:layout_width="50dp"
            android:src="@drawable/tulis"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/tvputusan"
            android:paddingTop="10dp"
            android:layout_marginLeft="6dp"
            android:text="Data Putusan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingTop="7dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp">

        <ImageView

            android:layout_width="50dp"
            android:src="@drawable/akte"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/tvaktecerai"
            android:paddingTop="10dp"
            android:layout_marginLeft="6dp"
            android:text="Data Akte Cerai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_prefdimari"
        android:text="info user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvheader"
        android:text="header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>