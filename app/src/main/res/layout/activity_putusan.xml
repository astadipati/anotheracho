<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:context=".activity.PutusanActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_dirputid"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Id Direktori Putusan: 24264" />

            <TextView
                android:id="@+id/tv_dirputnomorperkara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nomor Perkara: 1659/AC/2018/PA.Tbn" />

            <TextView
                android:id="@+id/tv_dirputfilename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filename: PA.Tbn_2018_Pdt.G_1659_putusan_akhir.pdf" />

            <TextView
                android:id="@+id/tv_dirputtglbuat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Buat: 19 September 2018" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""/>

            <TextView
                android:id="@+id/tv_dirputlink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Unduh Putusan" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>