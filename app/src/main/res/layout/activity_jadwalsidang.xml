<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:context=".activity.JadwalsidangActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_sdgtglsidang"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Sidang: 18/September/2018" />

            <TextView
                android:id="@+id/tv_sdgjamsidang"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jam Sidang: 09:00" />

            <TextView
                android:id="@+id/tv_sdgjamselesai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jam Selesai: 09:15" />

            <TextView
                android:id="@+id/tv_sdgagenda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agenda: Sidang Ikrar" />

            <TextView
                android:id="@+id/tv_sdgruangan"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ruangan: 1" />

            <TextView
                android:id="@+id/tv_sdgalasantunda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alasan Tunda:  " />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnsidang"
                android:layout_width="match_parent"
                android:text="Hadir Sidang"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>